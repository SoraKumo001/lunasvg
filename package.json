{
  "name": "lunasvg",
  "version": "1.0.0",
  "main": "index.js",
  "author": "SoraKumo <info@croud.jp>",
  "license": "MIT",
  "scripts": {
    "build:configure": "cmake -B build .",
    "build:make": "cmake --build build --config Release",
    "build": "npm run build:configure && npm run build:make",
    "test": "vitest",
    "convert": "tsx tools/run_convert.ts images/svg images/png-fork && tsx tools/convert.ts images/svg images/png-resvg && tsx tools/convert_wasm.ts images/svg images/png-luna"
  },
  "devDependencies": {
    "@resvg/resvg-js": "2.6.2",
    "@types/node": "25.1.0",
    "@types/pixelmatch": "5.2.6",
    "@types/pngjs": "6.0.5",
    "pixelmatch": "7.1.0",
    "pngjs": "7.0.0",
    "tsx": "4.21.0",
    "vitest": "4.0.18",
    "wasm-image-optimization": "1.4.4"
  },
  "repository": "https://github.com/SoraKumo001/lunasvg"
}